{% extends "base.jade" %}

{% block content %}
ul.list-group
  li.list-group-item.section-header Create a New Character
  li.list-group-item
    .edit-fields(style="padding: 10px;")
      form.form-horizontal(action="/characters/new-character", method="post")
        {{ form_errors(form) }}
        .form-group
          .col-sm-3
            {{ form.name.label(class="control-label") }}
          .col-sm-9
            {{ form.name(class="form-control") }}
        .form-group
          .col-sm-3
            {{ form.motto.label(class="control-label") }}
          .col-sm-9
            {{ form.motto(class="form-control") }}
        hr
        .form-group
          .col-sm-3
            label.control-label(for="other") Description
          .col-sm-9
            #character-other!= form.other.data
            {{ form.other }}
        hr
        button#commit-edit(type="submit").btn.btn-default Submit
        &nbsp;
        &nbsp;
        a#cancel-edit(href="/characters").btn.btn-default Cancel
        
{% endblock %}

{% block script %}
{% assets filters="rjsmin", output="generated/edit-character-profile.js",
"assets/quill2/quill.js", "assets/dropzone/dropzone.js", 
"assets/select2/select2.full.js", "local/js/inline-editor.js",
"local/js/edit-character-profile.js" %}
script(type="text/javascript", src="{{ASSET_URL}}").
{% endassets %}
{% endblock %}