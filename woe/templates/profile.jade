{% extends "base.jade" %}

{% block content %}
.row 
  .col-sm-4
    .panel.panel-default
      .panel-heading {{profile.display_name}}'s Profile
        a(href="/member/change-avatar-title")
          span.glyphicon.glyphicon-cog.float-right
      .panel-body.text-center
        {% if current_user.avatar_extension != "" %}
        img.center-block.profile-page-avatar#profile-avatar(src="{{current_user.get_avatar_url()}}", width="{{current_user.avatar_full_x}}", height="{{current_user.avatar_full_y}}")
        {% else %}
        img.center-block.profile-page-avatar#profile-avatar(src="", width="200px", height="200px")
        {% endif %}
        span.text-muted {{profile.title}}
    .panel.panel-default
      .panel-body.text-center
        ul.nav.nav-tabs.nav-stacked(role="tablist", style="border: none !important;")
          li(role="presentation")
            a(href="/user/{{profile.login_name}}/") About Me
          if current_user == profile
            li(role="presentation")
              a(href="/user/{{profile.login_name}}/settings/") Settings
  .col-sm-8
    .panel.panel-default
      .panel-heading About Me
        a(href="#")
          span.glyphicon.glyphicon-cog.float-right
      .panel-body
        .user-profile-about-me!= profile.about_me
{% endblock %}